<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItIsMe.Mobile.SignInPage"
             Title="SignInPage">
    
    <StackLayout Spacing="25" Padding="30">
        <Frame
            Padding="5">
            <Entry
                x:Name="EmailEntry"
                Placeholder="Enter your e-mail"></Entry>
        </Frame>
        <Frame
            Padding="5">
            <Entry
                x:Name="PasswordEntry"
                Placeholder="Enter your password"
                IsPassword="True"></Entry>
        </Frame>
        <Button 
            Clicked="SignInButtonClicked"
            Text="Sign in"/>
    </StackLayout>
</ContentPage>
