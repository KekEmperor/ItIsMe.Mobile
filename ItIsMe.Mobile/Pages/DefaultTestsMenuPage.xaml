<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ItIsMe.Mobile.DefaultTestsMenuPage"
             Title="Profession tests">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Button 
            Text="Mood test"
            Clicked="MoodTestButtonClicked" />
        <Label
            Text="Please pass the mood test to answer the other tests." 
            x:Name="MoodLabel" />
        <Label
            Text="Unfortunately, we cannot allow passing the next tests with such a mood."
            x:Name="BadMoodLabel" />
        <Button
            Text="Draw test"
            x:Name="DrawTestButton"
            Clicked="DrawTestButtonClicked" />
        <Button
            Text="IT speciality test"
            x:Name="ItTestButton"
            Clicked="ItSpecialityTestButtonClicked" />
        <Label
            Text="Please complete both tests above to submit them and see your result!"
            x:Name="FinalLabel"/>
        <Button
            Text="Submit profession tests"
            x:Name="SubmitButton"
            Clicked="SubmitTestsButtonClicked"/>
    </VerticalStackLayout>
</ContentPage>
